package P2;

// --- CONCEPT 1: THE PARENT (BASE) CLASS ---
// This class has the common features for ALL players.
class PlayerBase {
    String name;
    int age;
    
    // The constructor for the base class
    PlayerBase(String name, int age) {
        this.name = name;
        this.age = age;
    }
    
    // The base 'show' method
    void show() {
        System.out.println("\nPlayer Name: " + name);
        System.out.println("Player Age: " + age);
    }
}

// --- CONCEPT 2: CHILD (DERIVED) CLASSES ---
// "extends PlayerBase" means it INHERITS all fields/methods from PlayerBase
class CricketPlayer extends PlayerBase {
    String type; // This field is specific to CricketPlayer
    
    CricketPlayer(String name, int age, String type) {
        // We MUST call the parent's constructor using 'super()'
        // This sets up the 'name' and 'age' fields in the parent.
        super(name, age);
        this.type = type;
    }
    
    // --- CONCEPT 3: METHOD OVERRIDING ---
    // We provide a new, specific 'show()' method for this child class.
    @Override
    public void show() {
        // We can still run the original parent's code
        super.show(); 
        
        // And then add our own specific code
        System.out.println("Player Type: " + type);
    }
}

// We need a second child class to demonstrate inheritance
class FootballPlayer extends PlayerBase {
    String position; // This field is specific to FootballPlayer
    
    FootballPlayer(String name, int age, String position) {
        super(name, age); // Call the parent's constructor
        this.position = position;
    }
    
    @Override
    public void show() {
        super.show(); // Call parent's 'show()'
        System.out.println("Position: " + position);
    }
}

// A third child class to demonstrate inheritance
class HockeyPlayer extends PlayerBase {
    String role; // Specific field for HockeyPlayer
    
    HockeyPlayer(String name, int age, String role) {
        super(name, age); // Call the parent's constructor
        this.role = role;
    }
    
    @Override
    public void show() {
        super.show(); // Call parent's 'show()'
        System.out.println("Player Role: " + role);
    }
}


// --- DEMO CLASS ---
public class PlayerDemo {
    public static void main(String[] args) {
        
        // --- *** CHANGED SECTION *** ---
        // --- DEMONSTRATING INHERITANCE ---
        
        // We create specific objects for each child class.
        // This is no longer a polymorphic array.
        CricketPlayer c = new CricketPlayer("Virat Kohli",45, "Cricket");
        FootballPlayer f = new FootballPlayer("Lionel Messi", 36, "Forward");
        HockeyPlayer h = new HockeyPlayer("Ajay", 42, "Goaltender");
        
        System.out.println("=== DEMONSTRATING INHERITANCE ===");
        
        // We call the 'show()' method on each specific object.
        // Java calls the overridden method for each class.
        c.show(); 
        f.show();
        h.show();
    }
}

