package P2;

// 1. Create the interface (the "rule")
interface Vehicle {
    void start(); // abstract method (no body)
    void stop();
}

// 2. Implement the interface with a Car
class Car implements Vehicle {
    @Override
    public void start() {
        System.out.println("Car engine on");
    }
    
    @Override
    public void stop() {
        System.out.println("Car engine off");
    }
}

// 3. Implement the interface with a Bike
class Bike implements Vehicle {
    @Override
    public void start() {
        System.out.println("Bike kick-started");
    }
    
    @Override
    public void stop() {
        System.out.println("Bike engine killed");
    }
}

// 4. Use it in a main class
public class ProfDB {
    public static void main(String[] args) {
        
        // --- *** CHANGED SECTION *** ---
        // No switch case, just create and test both.
        
        System.out.println("=== Testing Car ===");
        Car myCar = new Car(); // Create a Car object
        myCar.start();
        myCar.stop();

        System.out.println("\n=== Testing Bike ===");
        Bike myBike = new Bike(); // Create a Bike object
        myBike.start();
        myBike.stop();
    }
}
